<%= form_with model: @new_transaction, url: deposite_accounts_update_credit_path do |form|%>
	<div class="form-wrapper">
		<div class="page-form">
			<div class="row"><%= form.text_field :last_transaction_amount, class: "form-control", placeholder: "Enter the amount you want to credit" %></div>
			<%= form.hidden_field :transaction_type, :value => "credit"%>
			<div class="row"><%= form.submit "Submit", :class=>"btn btn-warning" %></div>
		</div>
	</div>
<%end%>
