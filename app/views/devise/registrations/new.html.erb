<div class="login_page_main login_default_style">	
	<div class="login_header">
		<span>Sign UP or</span> 
		<%= link_to new_session_path(resource_name) do %>
			<span style="color: #4c98e6;">Login</span>
		<% end %>
	</div>
	
	<div style="color: red;font-size: 12px;"><%= devise_error_messages! %></div>
	
	<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
	  <div class="field login_fields">
	    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email address", class: "form-control"  %>
	  </div>
	
	  <div class="field login_fields">
	    <%= f.password_field :password, autocomplete: "off", placeholder: "Password (#{@minimum_password_length} characters minimum)", class: "form-control" %>
	  </div>
	  
	  <div class="field login_fields">
	    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password Confirmation", class: "form-control" %>
	  </div>
	
	  <div class="actions login_fields">
	    <%= f.submit "Sign up", class: "login_button  btn btn-info"  %>
	  </div>
	<% end %>

</div>
